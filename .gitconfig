[core]
  editor = vim
  excludesfile = ~/.gitignore

[alias]
  c = clone --recursive --depth 50
  l = log --decorate --pretty=oneline -n 20 --graph --abbrev-commit
  mc = clone --branch=master --depth 50
  s = status -s
  d = diff --cached

[commit]
  gpgsign = true

[diff "bin"]
  textconv = hexdump -v -C

[log]
  abbrevCommit = true
  decorate = true
  follow = true

[pull]
  rebase = true
